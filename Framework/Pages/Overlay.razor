<div class="overlay @OverlayClass" style="display: @overlayDisplay">
    <div class="overlay-content">
        @if (Images != null && Images.Any())
        {
            <div class="image-row">
                @foreach (var image in Images)
                {
                    @* <img src="@image.Value["image"]" alt="@image.Value["description"]" /> *@
                }
            </div>
        }
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string OverlayClass { get; set; } = "custom-overlay";
    [Parameter] public List<string> Images { get; set; } = new List<string>(); @* TODO use Inventory class and then @inject Inventory Inventory *@

    private string overlayDisplay = "none";
    private bool isOverlayVisible = false;

    private void ToggleOverlay()
    {
        isOverlayVisible = !isOverlayVisible;
        overlayDisplay = isOverlayVisible ? "block" : "none";
    }
}
